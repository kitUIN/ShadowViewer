<Page
    x:Class="ShadowViewer.Pages.StatusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:co="using:ShadowViewer.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:core="using:ShadowViewer.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:ShadowViewer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="0,32,0,5">
        <ScrollViewer Padding="10">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="6">
                <Border
                    Padding="10,0,10,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="7">
                    <StackPanel Orientation="Horizontal">
                        <Button Margin="18,5,18,5" Tapped="Image_Tapped">
                            <Image
                                Width="60"
                                Height="60"
                                VerticalAlignment="Center"
                                Source="{x:Bind viewModel.Comic.Img, Mode=OneWay}" />
                        </Button>
                        <TextBox
                            x:Name="FileImg"
                            MaxWidth="350"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            KeyDown="FileImg_KeyDown"
                            Text="{x:Bind viewModel.Comic.Img, Mode=OneWay}"
                            TextWrapping="NoWrap" />
                    </StackPanel>
                </Border>
                <Border
                    Padding="10,0,10,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="7">
                    <StackPanel
                        Padding="10,10,10,10"
                        Orientation="Vertical"
                        Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock
                                x:Uid="NameStatus"
                                Width="100"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                            <TextBox
                                x:Name="FileName"
                                MaxWidth="350"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                KeyDown="FileName_KeyDown"
                                Text="{x:Bind viewModel.Comic.Name, Mode=OneWay}"
                                TextWrapping="NoWrap" />
                        </StackPanel>
                        <co:StatusBlock x:Uid="AuthorStatus" Text="{x:Bind viewModel.Comic.Author}" />
                        <co:StatusBlock x:Uid="TypeStatus" Text="{x:Bind viewModel.GetComicType}" />
                        <co:StatusBlock x:Uid="ParentStatus" Text="{x:Bind viewModel.Comic.Parent}" />
                        <co:StatusBlock x:Uid="PathStatus" Text="{x:Bind viewModel.GetShadowPath}" />
                        <co:StatusBlock x:Uid="PercentStatus" Text="{x:Bind viewModel.Comic.Percent}" />
                        <co:StatusBlock x:Uid="LinkStatus" Text="{x:Bind viewModel.Comic.Link}" />
                    </StackPanel>
                </Border>
                <Border
                    Padding="10,0,10,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="7">
                    <StackPanel
                        Padding="10,10,10,10"
                        Orientation="Vertical"
                        Spacing="10">
                        <co:StatusBlock x:Uid="CreateTimeStatus" Text="{x:Bind viewModel.Comic.CreateTime}" />
                        <co:StatusBlock x:Uid="LastReadTimeStatus" Text="{x:Bind viewModel.Comic.LastReadTime}" />
                        <co:StatusBlock x:Uid="SizeStatus" Text="{x:Bind viewModel.Comic.SizeString}" />
                    </StackPanel>
                </Border>
                <Border
                    Padding="20,10,20,10"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="7">
                    <labs:TokenView ItemsSource="{x:Bind viewModel.Tags}" SelectionMode="None" />
                </Border>
                <Border
                    Padding="20,10,20,10"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="7"
                    Visibility="{x:Bind isTag}">
                    <StackPanel Orientation="Horizontal">
                        <labs:TokenView SelectionMode="None">
                            <labs:TokenItem
                                x:Name="ShowTagItem"
                                Background="{x:Bind ToBrush(BackgroundColorPicker.SelectedColor), Mode=OneWay}"
                                Content="{x:Bind TagNameBox.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Foreground="{x:Bind ToBrush(ForegroundColorPicker.SelectedColor), Mode=OneWay}"
                                IsSelected="False" />
                        </labs:TokenView>
                        <Button x:Uid="SettingButton" Margin="60,0,10,0">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBox
                                            x:Name="TagIdBox"
                                            x:Uid="TagIdBox"
                                            MaxWidth="120"  
                                            TextChanged="TagIdBox_TextChanged"/>
                                        <TextBox
                                            x:Name="TagNameBox"
                                            x:Uid="TagNameBox"
                                            MaxWidth="120"
                                            TextChanged="TagNameBox_TextChanged" />
                                        <StackPanel Orientation="Vertical" Spacing="9">
                                            <TextBlock x:Uid="TagBackgroundText" />
                                            <controls:ColorPickerButton
                                                x:Name="BackgroundColorPicker"
                                                Padding="3"
                                                CornerRadius="6"
                                                SelectedColor="Gold">
                                                <controls:ColorPickerButton.ColorPickerStyle>
                                                    <Style TargetType="controls:ColorPicker">
                                                        <Setter Property="ColorSpectrumShape" Value="Box" />
                                                        <Setter Property="IsAlphaEnabled" Value="False" />
                                                        <Setter Property="IsHexInputVisible" Value="True" />
                                                    </Style>
                                                </controls:ColorPickerButton.ColorPickerStyle>
                                            </controls:ColorPickerButton>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Spacing="9">
                                            <TextBlock x:Uid="TagForegroundText" />
                                            <controls:ColorPickerButton
                                                x:Name="ForegroundColorPicker"
                                                Padding="3"
                                                CornerRadius="6"
                                                SelectedColor="Black">
                                                <controls:ColorPickerButton.ColorPickerStyle>
                                                    <Style TargetType="controls:ColorPicker">
                                                        <Setter Property="ColorSpectrumShape" Value="Box" />
                                                        <Setter Property="IsAlphaEnabled" Value="False" />
                                                        <Setter Property="IsHexInputVisible" Value="True" />
                                                    </Style>
                                                </controls:ColorPickerButton.ColorPickerStyle>
                                            </controls:ColorPickerButton>
                                        </StackPanel>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            x:Name="AddNewTag"
                            x:Uid="AddNewTag"
                            Click="AddNewTag_Click" />
                    </StackPanel>

                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
