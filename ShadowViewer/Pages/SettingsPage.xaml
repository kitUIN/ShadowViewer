<Page
    x:Class="ShadowViewer.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:ShadowViewer.Pages"
    xmlns:m="using:ShadowViewer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:plugin="using:ShadowViewer.Plugins"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <BreadcrumbBar
            x:Name="TopBar"
            Grid.Row="0"
            Height="48"
            Margin="10,20,20,0"
            VerticalAlignment="Center"
            ItemClicked="TopBar_ItemClicked"
            ItemsSource="{x:Bind ViewModel.Pages, Mode=OneWay}">
            <BreadcrumbBar.ItemTemplate>
                <DataTemplate x:DataType="m:BreadcrumbItem">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Top"
                        FontSize="25"
                        Text="{Binding Title}" />
                </DataTemplate>
            </BreadcrumbBar.ItemTemplate>

        </BreadcrumbBar>
        <Frame x:Name="ContentFrame" Grid.Row="1" />
    </Grid>
</Page>
