<Page
    x:Class="ShadowViewer.Pages.BookShelfPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:co="using:ShadowViewer.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dv="using:ShadowViewer.Models"
    xmlns:icons="using:FluentIcon"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:ShadowViewer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ShadowViewer.Utils"
    x:Name="RootPage"
    mc:Ignorable="d">
    <Page.Resources>
        <x:Double x:Key="InfoTextSize">13</x:Double>
        <x:Double x:Key="InfoIconSize">17</x:Double>
        <x:Double x:Key="InfoButtonHeight">32</x:Double>
        <SymbolIconSource x:Key="ReplyIcon" Symbol="MailReply"/>
        <SymbolIconSource x:Key="DeleteIcon" Symbol="Delete"/>
        <SymbolIconSource x:Key="PinIcon" Symbol="Pin"/>

        <SwipeItems x:Key="RevealOptions" Mode="Reveal">
            <SwipeItem Text="Reply" IconSource="{StaticResource ReplyIcon}"/>
            <SwipeItem Text="Pin" IconSource="{StaticResource PinIcon}"/>
        </SwipeItems>

        <SwipeItems x:Key="ExecuteDelete" Mode="Execute">
            <SwipeItem Text="Delete" IconSource="{StaticResource DeleteIcon}"
                   Background="Red"/>
        </SwipeItems>
        <DataTemplate x:Key="SimpleLocalComicItem" x:DataType="dv:LocalComic">
            <Border BorderThickness="1.5" CornerRadius="10" Background="{StaticResource CardBackgroundFillColorSecondaryBrush}">

                <Grid
                Width="130"
                Height="180"
                Padding="6"
                AllowDrop="True"
                DragOver="GridViewItem_DragOverCustomized"
                Drop="GridViewItem_Drop"
                Tag="{x:Bind}">
                    <StackPanel VerticalAlignment="Top">
                        <Image
                        x:Name="connectedElement"
                        Width="120"
                        Height="130"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Source="{x:Bind Img}" />
                        <TextBlock
                        MaxWidth="100"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        MaxLines="1"
                        Text="{x:Bind Name}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap"
                        ToolTipService.ToolTip="{x:Bind Name}" />
                    </StackPanel>
                    <TextBlock
                    MaxWidth="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="13"
                    Foreground="Gray"
                    Text="{x:Bind Percent}" />
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="DetailLocalComicItem" x:DataType="dv:LocalComic">
            <Border BorderThickness="1.5" CornerRadius="10" Background="{StaticResource CardBackgroundFillColorSecondaryBrush}">
                <Grid
                Width="290"
                Height="150"
                Padding="10"
                AllowDrop="True"
                DragOver="GridViewItem_DragOverCustomized"
                Drop="GridViewItem_Drop"
                Tag="{x:Bind}">
                <SwipeControl
                          RightItems="{StaticResource RevealOptions}" 
                          Height="150">
                    <StackPanel
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Spacing="10">
                        <Image
                        Height="130"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="{x:Bind Img, Mode=OneWay}" />
                        <Grid>
                            <StackPanel
                            Width="160"
                            Height="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                                <TextBlock
                                Width="150"
                                HorizontalAlignment="Left"
                                FontSize="18"
                                FontWeight="Bold"
                                MaxLines="2"
                                Text="{x:Bind Name, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                                <TextBlock
                                Width="150"
                                HorizontalAlignment="Left"
                                FontSize="15"
                                MaxLines="1"
                                Text="{x:Bind Author, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                            <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Orientation="Vertical">
                                <StackPanel
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal"
                                Spacing="10">
                                    <TextBlock
                                    MaxWidth="60"
                                    HorizontalAlignment="Left"
                                    FontSize="15"
                                    Foreground="Gray"
                                    Text="{x:Bind Percent, Mode=OneWay}" />
                                    <TextBlock
                                    Width="70"
                                    HorizontalAlignment="Left"
                                    FontSize="15"
                                    Foreground="Gray"
                                    MaxLines="1"
                                    Text="{x:Bind SizeString, Mode=OneWay}"
                                    TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{x:Bind IsEpsDetailShow}">
                                    <FontIcon
                                    FontSize="15"
                                    Foreground="Gray"
                                    Glyph="&#xe7b8;" />
                                    <TextBlock
                                    Margin="10,0,0,0"
                                    FontSize="15"
                                    Foreground="Gray"
                                    Text="{x:Bind EpisodeCounts, Mode=OneWay}" />
                                    <TextBlock
                                    FontSize="15"
                                    Foreground="Gray"
                                    Text="E" />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                    FontSize="15"
                                    Foreground="Gray"
                                    Text="/" />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                    FontSize="15"
                                    Foreground="Gray"
                                    Text="{x:Bind Counts, Mode=OneWay}" />
                                    <TextBlock
                                    FontSize="15"
                                    Foreground="Gray"
                                    Text="P" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel> 
                </SwipeControl>
                <Button
                    Padding="8,6,8,6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Gold"
                    Content="{x:Bind AffiliationString, Mode=OneWay}"
                    CornerRadius="15"
                    FontSize="12"
                    Style="{StaticResource NoOverButton}"
                    Visibility="{Binding ElementName=RootPage, Path=DataContext, Mode=OneWay}" />
                </Grid>
            </Border>
        </DataTemplate>
        <CommandBarFlyout
            x:Name="HomeCommandBarFlyout"
            AlwaysExpanded="True"
            Placement="Right">
            <AppBarButton
                x:Name="ShadowCommandRename"
                Click="ShadowCommandRename_Click"
                Icon="Rename">
                <ToolTipService.ToolTip>
                    <ToolTip x:Uid="Xaml/ToolTip/Rename" />
                </ToolTipService.ToolTip>
            </AppBarButton>
            <AppBarButton
                x:Name="ShadowCommandDelete"
                Click="ShadowCommandDelete_Click"
                Icon="Delete">
                <ToolTipService.ToolTip>
                    <ToolTip x:Uid="Xaml/ToolTip/Delete" />
                </ToolTipService.ToolTip>
            </AppBarButton>
            <AppBarButton
                x:Name="ShadowCommandAddTag"
                x:Uid="Xaml/Command/AddTag"
                Click="ShadowCommandAddTag_Click"
                Icon="Tag">
                <ToolTipService.ToolTip>
                    <ToolTip x:Uid="Xaml/ToolTip/AddTag" />
                </ToolTipService.ToolTip>
            </AppBarButton>
            <CommandBarFlyout.SecondaryCommands>
                <AppBarButton x:Name="ShadowCommandAdd" x:Uid="Xaml/Command/Add">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xECC8;" />
                    </AppBarButton.Icon>
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Add" />
                    </ToolTipService.ToolTip>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Name="ShadowCommandNewFolder"
                                x:Uid="Xaml/Command/NewFolder"
                                Click="ShadowCommandAddNewFolder_Click"
                                Icon="NewFolder">
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/NewFolder" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="ShadowCommandAddFromFolder"
                                x:Uid="Xaml/Command/AddFromFolder"
                                Click="ShadowCommandAddFromFolder_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE82E;" />
                                </MenuFlyoutItem.Icon>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/AddFromFolder" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="ShadowCommandAddFromZip"
                                x:Uid="Xaml/Command/AddFromZip"
                                Click="ShadowCommandAddFromZip_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xF012;" />
                                </MenuFlyoutItem.Icon>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/AddFromZip" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="ShadowCommandRefresh"
                    x:Uid="Xaml/Command/Refresh"
                    Click="ShadowCommandRefresh_Click"
                    Icon="Refresh">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Refresh" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <AppBarButton
                    x:Name="ShadowCommandMove"
                    x:Uid="Xaml/Command/Move"
                    Click="ShadowCommandMove_Click"
                    Icon="MoveToFolder">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Move" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <AppBarButton
                    x:Name="ShadowCommandStatus"
                    x:Uid="Xaml/Command/Status"
                    Click="ShadowCommandStatus_Click"
                    Icon="Repair">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Status" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
            </CommandBarFlyout.SecondaryCommands>
        </CommandBarFlyout>
        <TeachingTip
            x:Name="MoveTeachingTip"
            x:Uid="Xaml/TeachingTip/Move"
            ActionButtonClick="MoveTeachingTip_ActionButtonClick"
            IsLightDismissEnabled="True"
            PlacementMargin="20"
            PreferredPlacement="Center">
            <TreeView x:Name="MoveTreeView" Margin="0,10,0,0">
                <TreeView.ItemTemplate>
                    <DataTemplate x:DataType="model:ShadowPath">
                        <TreeViewItem
                            DoubleTapped="TreeViewItem_DoubleTapped"
                            IsDoubleTapEnabled="True"
                            ItemsSource="{x:Bind Children}">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="5"
                                ToolTipService.ToolTip="{x:Bind Name}">
                                <Image Width="20" Source="{x:Bind Img}" />
                                <TextBlock Text="{x:Bind Name}" />
                            </StackPanel>
                        </TreeViewItem>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </TeachingTip>
    </Page.Resources>
    <Grid x:Name="Root" RightTapped="Root_RightTapped">
        <Grid
            Height="50"
            Padding="5"
            VerticalAlignment="Top">
            <StackPanel
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">
                <DropDownButton x:Name="AddButton" Height="{StaticResource InfoButtonHeight}">
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontSize="{StaticResource InfoIconSize}" Glyph="&#xECC8;" />
                            <TextBlock
                                x:Name="AddDetail"
                                x:Uid="Xaml/TextBlock/Add"
                                Margin="5,0,0,0" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Add" />
                    </ToolTipService.ToolTip>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                x:Uid="Xaml/Command/NewFolder"
                                Click="ShadowCommandAddNewFolder_Click"
                                Icon="NewFolder">
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/NewFolder" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="Xaml/Command/AddFromFolder" Click="ShadowCommandAddFromFolder_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE82E;" />
                                </MenuFlyoutItem.Icon>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/AddFromFolder" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="Xaml/Command/AddFromZip" Click="ShadowCommandAddFromZip_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xF012;" />
                                </MenuFlyoutItem.Icon>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/AddFromZip" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <Button
                    x:Name="MenuButton"
                    Height="{StaticResource InfoButtonHeight}"
                    Click="MenuButton_Click">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Menu" />
                    </ToolTipService.ToolTip>
                    <FontIcon FontSize="{StaticResource InfoIconSize}" Glyph="&#xEDE3;" />
                </Button>
            </StackPanel>
            <labs:Segmented
                HorizontalAlignment="Center"
                SelectedIndex="0"
                SelectionChanged="Segmented_SelectionChanged"
                SelectionMode="Single">
                <labs:SegmentedItem Width="75">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Simple" />
                    </ToolTipService.ToolTip>
                    <labs:SegmentedItem.Icon>
                        <FontIcon Glyph="&#xE163;" />
                    </labs:SegmentedItem.Icon>
                    <TextBlock x:Name="SimpleDetail" />
                </labs:SegmentedItem>
                <labs:SegmentedItem Width="75">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Detail" />
                    </ToolTipService.ToolTip>
                    <labs:SegmentedItem.Icon>
                        <FontIcon Glyph="&#xE161;" />
                    </labs:SegmentedItem.Icon>
                    <TextBlock x:Name="DetailDetail" />
                </labs:SegmentedItem>
            </labs:Segmented>
            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">
                <Button Height="{StaticResource InfoButtonHeight}">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Filter" />
                    </ToolTipService.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontSize="{StaticResource InfoIconSize}" Glyph="&#xE71C;" />
                        <TextBlock
                            x:Name="FilterDetail"
                            x:Uid="Xaml/TextBlock/Filter"
                            Margin="5,0,0,0" />
                    </StackPanel>
                </Button>
                <DropDownButton
                    x:Name="SortButton"
                    Height="{StaticResource InfoButtonHeight}"
                    Loaded="Controls_Loaded">
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontSize="{StaticResource InfoIconSize}" Glyph="&#xE8CB;" />
                            <TextBlock
                                x:Name="SortDetail"
                                x:Uid="Xaml/TextBlock/Sort"
                                Margin="5,0,0,0" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Sort" />
                    </ToolTipService.ToolTip>
                    <DropDownButton.Flyout>
                        <MenuFlyout x:Name="SortFlyout" Placement="Bottom">
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="PA" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="PZ" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="AZ" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="ZA" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="RA" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="RZ" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="CA" />
                            <MenuFlyoutItem Click="MenuFlyoutItem_Click" Tag="CZ" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
        </Grid>
        <ScrollViewer
                Padding="5" Margin="0,40,0,15" 
                HorizontalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Disabled"
                IsVerticalScrollChainingEnabled="True"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Enabled">
            <RefreshContainer RefreshRequested="RefreshContainer_RefreshRequested">
                <GridView
                    x:Name="ContentGridView"
                    Padding="5"
                    AllowDrop="False"
                    CanDragItems="True"
                    CanReorderItems="False"
                    DoubleTapped="ContentGridView_DoubleTapped"
                    DragItemsStarting="ContentGridView_DragItemsStarting"
                    FlowDirection="LeftToRight"
                    IsItemClickEnabled="False"
                    ItemTemplate="{StaticResource SimpleLocalComicItem}"
                    ItemsSource="{x:Bind ViewModel.LocalComics}"
                    KeyDown="GridViewOnKeyDown"
                    RightTapped="ContentGridView_RightTapped"
                    SelectionChanged="ContentGridView_SelectionChanged"
                    SelectionMode="Extended" >
                    <GridView.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="True" />
                        </TransitionCollection>
                    </GridView.Transitions>
                     
                </GridView>
            </RefreshContainer>
        </ScrollViewer>
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Uid="Xaml/TextBlock/TeachingShelf1"
                    FontSize="17"
                    FontWeight="Bold" />
                <TextBlock
                    x:Name="TeachingShelfBlock1"
                    x:Uid="Xaml/TextBlock/TeachingShelf3"
                    FontSize="17"
                    FontWeight="Bold" />
                <FontIcon
                    x:Name="TeachingShelfBlock2"
                    FontSize="{StaticResource InfoIconSize}"
                    Glyph="&#xEDE3;" />
                <TextBlock
                    x:Uid="Xaml/TextBlock/TeachingShelf2"
                    FontSize="17"
                    FontWeight="Bold" />

            </StackPanel>

        </Grid>
        <Grid x:Name="ShelfInfo" VerticalAlignment="Bottom">
            <StackPanel
                Margin="6,0,0,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Orientation="Horizontal"
                Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="3">
                    <TextBlock FontSize="{StaticResource InfoTextSize}" Text="{x:Bind ViewModel.FolderTotalCounts, Mode=OneWay}" />
                    <TextBlock x:Uid="Xaml/TextBlock/FolderTotalHeader" FontSize="{StaticResource InfoTextSize}" />
                </StackPanel>
                <TextBlock FontSize="{StaticResource InfoTextSize}" Text="|" />
                <StackPanel
                    x:Name="SelectionPanel"
                    Orientation="Horizontal"
                    Spacing="5">
                    <TextBlock x:Uid="Xaml/TextBlock/SelectionHeader" FontSize="{StaticResource InfoTextSize}" />
                    <TextBlock x:Name="SelectionValue" FontSize="{StaticResource InfoTextSize}" />
                    <TextBlock x:Uid="Xaml/TextBlock/FolderTotalHeader" FontSize="{StaticResource InfoTextSize}" />
                    <TextBlock
                        x:Name="SizeValue"
                        Margin="5,0,0,0"
                        FontSize="{StaticResource InfoTextSize}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="{StaticResource InfoTextSize}"
                        Text="|" />
                </StackPanel>
            </StackPanel>

        </Grid>
        <Grid
            Padding="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <HyperlinkButton Height="28" Click="SettingsButton_Click">
                    <FontIcon FontSize="14" Glyph="&#xE713;" />
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/BookSettings" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>
            </StackPanel>
        </Grid>

        <Grid
            x:Name="SmokeGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            RightTapped="SmokeGrid_RightTapped"
            Visibility="Collapsed">
            <Grid.Background>
                <AcrylicBrush TintColor="{ThemeResource SystemChromeAltHighColor}" TintOpacity="0.1" />
            </Grid.Background>
            <Grid
                x:Name="destinationElement"
                Width="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="5">
                <Frame x:Name="SmokeFrame" />
                <Button
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="BackButton_Click">
                    <Button.Content>
                        <FontIcon FontSize="11" Glyph="&#xE894;" />
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
        <controls:Loading x:Name="LoadingControl" RightTapped="SmokeGrid_RightTapped">
            <controls:Loading.Background>
                <AcrylicBrush TintColor="Black" TintOpacity="0.2" />
            </controls:Loading.Background>
            <StackPanel
                Padding="12"
                Orientation="Horizontal"
                Spacing="10">
                <Image
                    x:Name="ZipThumb"
                    Width="250"
                    Height="250" />
                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="20">
                    <TextBlock
                        x:Name="LoadingFileName"
                        MaxWidth="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20" />
                    <ProgressBar
                        x:Name="LoadingProgressBar"
                        Width="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsIndeterminate="False"
                        Maximum="100"
                        Minimum="0" />
                    <StackPanel
                        x:Name="LoadingProgressText"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="5"
                        Visibility="Collapsed">
                        <TextBlock Text="{x:Bind LoadingProgressBar.Value, Mode=OneWay}" />
                        <TextBlock Text="%" />
                    </StackPanel>
                    <TextBlock
                        x:Name="LoadingControlText"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16" />
                    <Button
                        x:Name="CancelButton"
                        x:Uid="Xaml/Button/Cancel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="CancelButton_Click" />
                    <TextBlock
                        x:Name="CompressTip"
                        x:Uid="Xaml/TextBlock/CompressTip"
                        Width="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        TextWrapping="WrapWholeWords" />
                </StackPanel>
            </StackPanel>
        </controls:Loading>
    </Grid>
</Page>
