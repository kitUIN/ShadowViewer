<Page
    x:Class="ShadowViewer.Pages.BookShelfPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:co="using:ShadowViewer.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dv="using:ShadowViewer.Models"
    xmlns:local="using:ShadowViewer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ShadowViewer.Utils"
    mc:Ignorable="d">
    <Page.Resources>

        <CommandBarFlyout
            x:Name="HomeCommandBarFlyout"
            AlwaysExpanded="True"
            Placement="Right">
            <AppBarButton
                x:Name="ShadowCommandRename"
                Click="ShadowCommandRename_Click"
                Icon="Rename">
                <ToolTipService.ToolTip>
                    <ToolTip x:Uid="Xaml/ToolTip/Rename" />
                </ToolTipService.ToolTip>
            </AppBarButton>
            <AppBarButton
                x:Name="ShadowCommandDelete"
                Click="ShadowCommandDelete_Click"
                Icon="Delete">
                <ToolTipService.ToolTip>
                    <ToolTip x:Uid="Xaml/ToolTip/Delete" />
                </ToolTipService.ToolTip>
            </AppBarButton>
            <AppBarButton
                x:Name="ShadowCommandAddTag"
                x:Uid="Xaml/Command/AddTag"
                Icon="Tag"
                Tapped="ShadowCommandAddTag_Click">
                <ToolTipService.ToolTip>
                    <ToolTip x:Uid="Xaml/ToolTip/AddTag" />
                </ToolTipService.ToolTip>
            </AppBarButton>
            <CommandBarFlyout.SecondaryCommands>
                <AppBarButton x:Name="ShadowCommandAdd" x:Uid="Xaml/Command/Add">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xECC8;" />
                    </AppBarButton.Icon>
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Add" />
                    </ToolTipService.ToolTip>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Name="ShadowCommandNewFolder"
                                x:Uid="Xaml/Command/NewFolder"
                                Click="ShadowCommandAddNewFolder_Click"
                                Icon="NewFolder">
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="ShadowCommandNewFolderToolTip" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="ShadowCommandAddFromFolder"
                                x:Uid="Xaml/Command/AddFromFolder"
                                Click="ShadowCommandAddFromFolder_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE82E;" />
                                </MenuFlyoutItem.Icon>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/AddFromFolder" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="ShadowCommandAddFromZip"
                                x:Uid="Xaml/Command/AddFromZip"
                                Click="ShadowCommandAddFromZip_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xF012;" />
                                </MenuFlyoutItem.Icon>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="Xaml/ToolTip/AddFromZip" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="ShadowCommandRefresh"
                    x:Uid="Xaml/Command/Refresh"
                    Click="ShadowCommandRefresh_Click"
                    Icon="Refresh">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Refresh" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <AppBarButton
                    x:Name="ShadowCommandMove"
                    x:Uid="Xaml/Command/Move"
                    Click="ShadowCommandMove_Click"
                    Icon="MoveToFolder">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Move" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
                <AppBarButton
                    x:Name="ShadowCommandStatus"
                    x:Uid="Xaml/Command/Status"
                    Click="ShadowCommandStatus_Click"
                    Icon="Repair">
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Status" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
            </CommandBarFlyout.SecondaryCommands>
        </CommandBarFlyout>
        <TeachingTip
            x:Name="MoveTeachingTip"
            x:Uid="Xaml/TeachingTip/Move"
            ActionButtonClick="MoveTeachingTip_ActionButtonClick"
            IsLightDismissEnabled="True"
            PlacementMargin="20"
            PreferredPlacement="Center">
            <TreeView x:Name="MoveTreeView" Margin="0,10,0,0">
                <TreeView.ItemTemplate>
                    <DataTemplate x:DataType="model:ShadowPath">
                        <TreeViewItem
                            DoubleTapped="TreeViewItem_DoubleTapped"
                            IsDoubleTapEnabled="True"
                            ItemsSource="{x:Bind Children}">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="5"
                                ToolTipService.ToolTip="{x:Bind Name}">
                                <Image Width="20" Source="{x:Bind Img}" />
                                <TextBlock Text="{x:Bind Name}" />
                            </StackPanel>
                        </TreeViewItem>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </TeachingTip>
    </Page.Resources>

    <Grid x:Name="Root" RightTapped="Root_RightTapped">
        <ScrollViewer
            Margin="0,40,0,0"
            Padding="5"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            IsVerticalScrollChainingEnabled="True"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">
            <GridView
                x:Name="ContentGridView"
                Padding="6"
                AllowDrop="False"
                CanDragItems="True"
                CanReorderItems="False"
                DoubleTapped="ContentGridView_DoubleTapped"
                DragItemsStarting="ContentGridView_DragItemsStarting"
                FlowDirection="LeftToRight"
                IsItemClickEnabled="False"
                ItemsSource="{x:Bind ViewModel.LocalComics}"
                RightTapped="ContentGridView_RightTapped"
                SelectionMode="Extended">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="dv:LocalComic">
                        <Grid
                            Width="130"
                            Height="180"
                            Padding="6"
                            AllowDrop="True"
                            DragOver="GridViewItem_DragOverCustomized"
                            Drop="GridViewItem_Drop"
                            Tag="{x:Bind}">
                            <StackPanel>
                                <Image
                                    x:Name="connectedElement"
                                    Width="120"
                                    Height="130"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Source="{x:Bind Img}" />
                                <TextBlock
                                    MaxWidth="100"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    MaxLines="1"
                                    Text="{x:Bind Name}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap"
                                    ToolTipService.ToolTip="{x:Bind Name}" />
                            </StackPanel>
                            <TextBlock
                                MaxWidth="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                FontSize="13"
                                Foreground="Gray"
                                Text="{x:Bind Percent}" />
                            <StackPanel
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Spacing="2">
                                <Button
                                    x:Uid="Xaml/Button/Temp"
                                    Padding="5"
                                    Background="Orange"
                                    CornerRadius="10"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Style="{StaticResource NoOverButton}"
                                    Visibility="{x:Bind IsTemp}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </ScrollViewer>
        <Grid
            Height="50"
            Padding="5"
            VerticalAlignment="Top">
            <StackPanel
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button>
                    <FontIcon FontSize="16" Glyph="&#xE71C;" />

                </Button>
            </StackPanel>
            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">

                <DropDownButton x:Name="SortButton" Loaded="SortButton_Loaded">
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon FontSize="17" Glyph="&#xE8CB;" />
                            <TextBlock x:Name="SortText" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <ToolTipService.ToolTip>
                        <ToolTip x:Uid="Xaml/ToolTip/Sort" />
                    </ToolTipService.ToolTip>
                    <DropDownButton.Flyout>

                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/PA"
                                Click="MenuFlyoutItem_Click"
                                Tag="PA" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/PZ"
                                Click="MenuFlyoutItem_Click"
                                Tag="PZ" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/AZ"
                                Click="MenuFlyoutItem_Click"
                                Tag="AZ" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/ZA"
                                Click="MenuFlyoutItem_Click"
                                Tag="ZA" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/RA"
                                Click="MenuFlyoutItem_Click"
                                Tag="RA" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/RZ"
                                Click="MenuFlyoutItem_Click"
                                Tag="RZ" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/CA"
                                Click="MenuFlyoutItem_Click"
                                Tag="CA" />
                            <MenuFlyoutItem
                                x:Uid="Xaml/MenuFlyoutItem/CZ"
                                Click="MenuFlyoutItem_Click"
                                Tag="CZ" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>

        </Grid>

        <Grid
            x:Name="SmokeGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            RightTapped="SmokeGrid_RightTapped"
            SizeChanged="SmokeGrid_SizeChanged"
            Visibility="Collapsed">
            <Grid.Background>
                <AcrylicBrush TintColor="{ThemeResource SystemChromeAltHighColor}" TintOpacity="0.1" />
            </Grid.Background>
            <Grid
                x:Name="destinationElement"
                Width="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="5">
                <Frame x:Name="SmokeFrame" />
                <Button
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="BackButton_Click">
                    <Button.Content>
                        <FontIcon FontSize="11" Glyph="&#xE894;" />
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
        <controls:Loading x:Name="LoadingControl" RightTapped="SmokeGrid_RightTapped">
            <controls:Loading.Background>
                <AcrylicBrush TintColor="Black" TintOpacity="0.2" />
            </controls:Loading.Background>
            <StackPanel
                Padding="12"
                Orientation="Vertical"
                Spacing="10">
                <ProgressBar
                    x:Name="LoadingProgressBar"
                    Width="130"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsIndeterminate="True" />
                <TextBlock
                    x:Name="LoadingControlText"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16" />
            </StackPanel>
        </controls:Loading>
    </Grid>
</Page>
