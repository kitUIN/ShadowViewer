<Window
    x:Class="ShadowViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShadowViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:ShadowViewer.Pages"
    mc:Ignorable="d">

    <Grid
        MinWidth="650"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        Loaded="Grid_Loaded">
        <Border
            x:Name="AppTitleBar"
            Height="48"
            Margin="48,0,0,0"
            VerticalAlignment="Top"
            AutomationProperties.AutomationId="AppTitleBar"
            Background="Transparent"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Image Width="18" Source="ms-appx:///Assets/Tiles/TitlebarLogo.png" />
                <TextBlock
                    x:Name="AppTitle"
                    x:Uid="Xaml/TextBlock/AppTitle"
                    VerticalAlignment="Center" />
                <FontIcon
                    x:Name="DebugIcon"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="#e8a45a"
                    Glyph="&#xEBE8;"
                    Visibility="Collapsed" />
            </StackPanel>
        </Border>
        <pages:NavigationPage />
    </Grid>
</Window>
