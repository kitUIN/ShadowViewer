<winUiEx:WindowEx
    x:Class="ShadowViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:controls="using:ShadowViewer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18N="using:ShadowViewer.I18n"
    xmlns:interfaces="using:ShadowViewer.Sdk.Models.Interfaces"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadowViewer="using:ShadowViewer"
    xmlns:winUiEx="using:WinUIEx"
    x:Name="ThisWindow"
    Title="ShadowViewer"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid
            x:Name="MainGrid"
            MinWidth="650">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
        </Grid>
        <Grid
            x:Name="LoadingGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <StackPanel
                MaxWidth="600"
                MaxHeight="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Loaded="Content_Loaded"
                Orientation="Vertical"
                Spacing="10">
                <animations:Explicit.Animations>
                    <animations:AnimationSet x:Name="InAnimationLoadingGrid">
                        <animations:TranslationAnimation
                            EasingMode="EaseOut"
                            From="0,225"
                            To="0,0"
                            Duration="0:0:0.7" />
                        <animations:OpacityAnimation
                            EasingMode="EaseOut"
                            From="0"
                            To="1"
                            Duration="0:0:0.7" />
                    </animations:AnimationSet> 
                </animations:Explicit.Animations>
                <StackPanel Spacing="20" Orientation="Horizontal">
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Assets/StoreLogo.scale-150.png" />
                    <TextBlock VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="Segoe UI Variable Display"
                        FontSize="50"
                        FontWeight="ExtraBlack"
                        Text="ShadowViewer" />
                </StackPanel>
                <ProgressRing
                    HorizontalAlignment="Center"
                    IsActive="True"
                    IsIndeterminate="True" />
                <TextBlock x:Name="LoadingText" HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</winUiEx:WindowEx>